{
  "ver" : "1.0.0",
  "authors" : ["seaver", "tgu2", "qzhang"],
  "contact" : "http://kbase.us/contact-us/",
  "visble" : true,
  "categories" : [ "inactive","assembly","upload" ],
  "widgets" : {
    "input" : null,
    "output" : "kbaseGenomeView"
  },
  "parameters" : 
  [ 
    {
      "id" : "fasta_file",
      "optional" : false,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "" ],
      "field_type" : "dynamic_dropdown",
      "dynamic_dropdown_options" : {
        "data_source": "ftp_staging"
      }
    },    
    {
      "id" : "gff_file",
      "optional" : false,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "" ],
      "field_type" : "dynamic_dropdown",
      "dynamic_dropdown_options" : {
        "data_source": "ftp_staging"
      }
    },
    {
      "id" : "genome_name",
      "optional" : false,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "" ],
      "field_type" : "text",
      "text_options" : 
      {
        "valid_ws_types" : [ "KBaseGenomes.Genome" ],
        "is_output_name" : true
      }
    },
    {
      "id" : "genome_type",
      "optional" : false,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "draft isolate" ],
      "field_type" : "dropdown",
      "dropdown_options":{
      "options": [
        {
          "value": "draft isolate",
          "display": "Draft Isolate"
        },
        {
          "value": "finished isolate",
          "display": "Finished Isolate"
        },
        {
          "value": "fungi",
          "display": "Fungi"
        },
        {
          "value": "mag",
          "display": "Metagenome-assembled genome (MAG)"
        },
        {
          "value": "other Eukaryote",
          "display": "Other Eukaryote"
        },
        {
          "value": "plant",
          "display": "Plant"
        },
        {
          "value": "sag",
          "display": "Single amplified genome (SAG)"
        },
        {
          "value": "virus",
          "display": "Virus"
        },
        {
          "value": "plasmid",
          "display": "Plasmid"
        },
        {
          "value": "construct",
          "display": "Construct"
        }
      ]}
    },
    {
      "id" : "scientific_name",
      "optional" : true,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "" ],
      "field_type" : "dynamic_dropdown",
      "dynamic_dropdown_options": {
          "data_source": "custom",
          "service_function": "taxonomy_re_api.search_species",
          "service_version": "release",
          "service_params": [
              {
                  "search_text": "prefix:{{dynamic_dropdown_input}}",
                  "ns": "ncbi_taxonomy",
                  "limit": 20
              }
          ],
          "query_on_empty_input": 0,
          "result_array_index": 0,
          "path_to_selection_items": ["results"],
          "selection_id": "ncbi_taxon_id",
          "exact_match_on": "scientific_name",
          "description_template": "NCBI Tax ID {{ncbi_taxon_id}}:&nbsp<strong>{{scientific_name}}</strong>",
          "multiselection": false
      }
    },
    {
      "id" : "source",
      "optional" : false,
      "advanced" : false,
      "allow_multiple" : false,
      "default_values" : [ "Other" ],
      "field_type" : "dropdown",
      "dropdown_options":{
      "options": [
        {
          "value": "RefSeq user",
          "display": "RefSeq"
        },
        {
          "value": "Ensembl user",
          "display": "Ensembl"
        },
        {
          "value": "JGI",
          "display": "JGI"
        },
        {
          "value": "Other",
          "display": "Other"
        }
      ]}
    },
    {
      "id" : "taxon_wsname",
      "optional" : true,
      "advanced" : true,
      "allow_multiple" : false,
      "default_values" : [ "" ],
      "field_type" : "text",
      "text_options" : {}
    },
    {  
      "id": "release",
      "optional": true,
      "advanced": true,
      "allow_multiple": false,
      "default_values": [ "" ],
      "field_type" : "text" 
    },
    {  
      "id": "genetic_code",
      "optional": true,
      "advanced": true,
      "allow_multiple": false,
      "default_values": [ "" ],
      "field_type" : "text",
      "text_options" : {
        "validate_as": "int"
      }
    },
    {
      "id": "generate_missing_genes",
      "optional":true,
      "advanced":true,
      "allow_multiple":false,
      "default_values":["1"],
      "field_type" : "checkbox",
      "checkbox_options":{
        "checked_value": 1,
        "unchecked_value": 0
      }
    }
  ],
  "behavior" : 
  {
    "service-mapping" : 
    {
      "url" : "",
      "name" : "kb_uploadmethods",
      "method" : "upload_fasta_gff_file",
      "input_mapping" : 
      [
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        },
        {
          "input_parameter": "fasta_file",
          "target_property": "fasta_file"
        },
        {
          "input_parameter": "gff_file",
          "target_property": "gff_file"
        },
        {
          "input_parameter": "genome_name",
          "target_property": "genome_name"
        },
        {
          "input_parameter": "genome_type",
          "target_property": "genome_type"
        },
        {
          "input_parameter": "scientific_name",
          "target_property": "taxon_id"
        },
        {
          "input_parameter": "source",
          "target_property": "source"
        },
        {
          "input_parameter": "taxon_wsname",
          "target_property": "taxon_wsname"
        },
        {
          "input_parameter": "release",
          "target_property": "release"
        },
        {
          "input_parameter": "genetic_code",
          "target_property": "genetic_code"
        },
        {
          "input_parameter": "generate_missing_genes",
          "target_property": "generate_missing_genes"
        }
      ],
      "output_mapping" : 
      [
        {
          "narrative_system_variable": "workspace",
          "target_property": "ws"
        },
        {
          "constant_value": "KBaseGenomes.Genome",
          "target_property": "type"
        },
        {
          "input_parameter": "genome_name",
          "target_property": "id"
        },
        {
            "service_method_output_path": [0, "report_name"],
            "target_property": "report_name"
        },
        {
            "service_method_output_path": [0, "report_ref"],
            "target_property": "report_ref"
        },
        {
          "service_method_output_path": [0,"obj_ref"],
          "target_property": "obj_ref"
        },
        {
            "constant_value": "16",
            "target_property": "report_window_line_height"
        }
      ]
    }
  },
  "job_id_output_field": "docker"
}
